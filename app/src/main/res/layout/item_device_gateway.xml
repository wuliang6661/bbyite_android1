<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        app:cardCornerRadius="8dp"
        app:contentPaddingBottom="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/item_device_gateway_tv_gateway_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="1"
                android:textColor="#333333"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/item_device_gateway_iv_gateway_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/item_device_gateway_tv_gateway_id"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/icon_device_gateway_icon" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/item_device_gateway_iv_gateway_icon">

                <TextView
                    android:id="@+id/item_device_gateway_tv_gateway_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="网关设备"
                    android:textColor="#485465"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/item_device_gateway_tv_time"
                    android:layout_width="match_parent"
                    android:text="1"
                    android:layout_marginTop="5dp"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:id="@+id/item_device_gateway_view_device_state"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/shape_deivce_state_zaixian" />

                <TextView
                    android:id="@+id/item_device_gateway_tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="在线"
                    android:textColor="#4DC24C"
                    android:textSize="11sp" />
            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>