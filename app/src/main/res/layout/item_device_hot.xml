<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <View
        android:id="@+id/item_device_hot_view_left_line1"
        android:layout_width="10dp"
        android:visibility="gone"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/item_device_hot_view_left_line2"
        android:layout_width="5dp"
        android:visibility="gone"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shape_home_blew_hot_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_device_hot_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_home_blew_hot_tv_bg"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="1"
            android:lines="1"
            android:maxLength="6"
            android:textColor="#555555"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/item_device_hot_iv_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <View
        android:id="@+id/item_device_hot_view_right_line1"
        android:layout_width="10dp"
        android:visibility="gone"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/item_device_hot_view_right_line2"
        android:layout_width="5dp"
        android:visibility="gone"
        android:layout_height="match_parent" />

</LinearLayout>