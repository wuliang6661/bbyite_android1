<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />


    <com.baibeiyun.bbyiot.view.pullableview.PullToRefreshLayout
        android:id="@+id/act_device_switch_PullToRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/pull_refresh_head2" />

        <com.baibeiyun.bbyiot.view.pullableview.PullableGridView
            android:id="@+id/act_device_switch_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include layout="@layout/pull_load_more2" />

    </com.baibeiyun.bbyiot.view.pullableview.PullToRefreshLayout>

</LinearLayout>