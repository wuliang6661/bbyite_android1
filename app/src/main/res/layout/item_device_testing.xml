<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/white"
    app:cardCornerRadius="8dp"
    app:contentPaddingBottom="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_device_testing_iv_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />


        <TextView
            android:id="@+id/item_device_testing_tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/item_device_testing_iv_icon"
            android:text="1111"
            android:textColor="#333333"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/item_device_testing_tv_device_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_device_testing_tv_device_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/item_device_testing_iv_icon"
            android:text="1111"
            android:textColor="#666666"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/item_device_testing_tv_device_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_device_testing_tv_device_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/item_device_testing_iv_icon"
            android:text="1111"
            android:textColor="#CCCCCC"
            android:textSize="11sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/item_device_testing_view_device_state"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/shape_deivce_state_zaixian" />

            <TextView
                android:id="@+id/item_device_testing_tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="在线"
                android:textColor="#4DC24C"
                android:textSize="10sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/item_device_testing_tv_device_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="90.00ml"
            android:textColor="#000000"
            android:textSize="20sp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>