<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <com.baibeiyun.bbyiot.view.pullableview.special.MyPullToRefreshLayout
        android:id="@+id/frg_order_refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1">

        <include layout="@layout/pull_refresh_head2"/>

        <com.baibeiyun.bbyiot.view.pullableview.PullableListView
            android:id="@+id/frg_order_listview"
            android:layout_width="match_parent"
            android:dividerHeight="6dp"
            android:divider="#f5f5f5"
            android:layout_height="match_parent"/>

        <include layout="@layout/pull_load_more2"/>

    </com.baibeiyun.bbyiot.view.pullableview.special.MyPullToRefreshLayout>

</LinearLayout>