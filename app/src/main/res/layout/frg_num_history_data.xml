<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="选择时间"
            android:textColor="#0D0E10"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/frg_num_history_data_tv_start_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_analysis_time_bg"
                android:gravity="center"
                android:text="开始时间"
                android:textColor="#333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/frg_num_history_data_tv_end_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_analysis_time_bg"
                android:gravity="center"
                android:text="结束时间"
                android:textColor="#333333"
                android:textSize="13sp" />
        </LinearLayout>


    </LinearLayout>

    <com.baibeiyun.bbyiot.view.chart.my.MyLineChart
        android:id="@+id/frg_num_history_data_linechart"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
</LinearLayout>