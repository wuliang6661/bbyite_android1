<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/time_bg"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/item_select_group_iv_colse"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="12dp"
            android:src="@mipmap/icon_dialog_colse" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_select_group_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="选择分组"
                android:textColor="#444"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_select_group_tv_cofirm"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/main_color"
            android:textSize="16sp" />
    </LinearLayout>


    <ListView
        android:id="@+id/item_select_group_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/base_bg"
        android:dividerHeight="0.5dp"
        android:background="@color/white"
        android:listSelector="@android:color/transparent" />

</LinearLayout>