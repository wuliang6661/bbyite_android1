<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/item_selcet_group_rl_root"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F7F7F7"
        app:layout_heightPercent="30%sw"
        app:layout_widthPercent="30%sw">


        <ImageView
            android:id="@+id/item_selcet_group_iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:src="@mipmap/icon_select_group_check_01" />

        <ImageView
            android:id="@+id/item_selcet_group_iv_is_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_select_group_is_check" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <TextView
        android:id="@+id/item_selcet_group_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="11"
        android:textColor="#666666"
        android:textSize="14sp" />


</com.zhy.android.percent.support.PercentLinearLayout>