<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/layout_analysis_tip1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_analysis_mode_bg">


        <TextView
            android:id="@+id/layout_analysis_tip_tv_minute"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_analysis_left_chcek_bg"
            android:gravity="center"
            android:text="10分钟"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/main_color" />


        <TextView
            android:id="@+id/layout_analysis_tip_tv_hour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_analysis_right_nor_bg"
            android:gravity="center"
            android:text="1小时"
            android:textColor="@color/main_color"
            android:textSize="16sp" />


    </LinearLayout>


</LinearLayout>