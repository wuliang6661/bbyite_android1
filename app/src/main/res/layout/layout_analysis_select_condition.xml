<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <LinearLayout
        android:id="@+id/layout_analysis_select_condition_rl_group"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="50dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分组选择"
            android:textColor="#333333"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_select_gorup"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="请选择"
            android:textColor="#999999"
            android:singleLine="true"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_common_arrow_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_bg" />


    <LinearLayout
        android:id="@+id/layout_analysis_select_condition_rl_device_name"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="50dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备名称"
            android:textColor="#333333"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_select_device_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="请选择"
            android:textColor="#999999"
            android:singleLine="true"
            android:gravity="end"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_common_arrow_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_bg" />



    <LinearLayout
        android:id="@+id/layout_analysis_select_condition_rl_property_name"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="50dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="属性名称"
            android:textColor="#333333"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_select_property_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="请选择"
            android:textColor="#999999"
            android:singleLine="true"
            android:gravity="end"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_common_arrow_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_bg" />


    <LinearLayout
        android:id="@+id/layout_analysis_select_condition_rl_start_date"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="50dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="开始时间"
            android:textColor="#333333"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_select_start_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="请选择"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_common_arrow_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_bg" />


    <LinearLayout
        android:id="@+id/layout_analysis_select_condition_rl_end_date"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="50dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间"
            android:textColor="#333333"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_select_end_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="请选择"
            android:layout_marginLeft="10dp"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="13sp" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_common_arrow_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_bg" />

    <Button
        android:id="@+id/layout_analysis_select_condition_tv_query"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_common_btn_bg"
        android:text="查询"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>